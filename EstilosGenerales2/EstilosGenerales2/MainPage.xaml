<Page
    x:Class="EstilosGenerales2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EstilosGenerales2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="30,30,0,0">
            <TextBlock Text="Nombre de la APP"
                       FontSize="25"
                       Foreground="{StaticResource MiColor}"/>
            <TextBlock Text="Vamos a dar estilos a toda la aplicación simplemente colocando los parametros en App.xaml"
                       TextWrapping="Wrap"
                       FontSize="20"
                       Margin="0,20,0,0"/>
            <Button Content="Botón con estilo"
                    Margin="0,10,0,0"
                    Style="{StaticResource EstiloBoton}"/>
        </StackPanel>
    </Grid>
</Page>
